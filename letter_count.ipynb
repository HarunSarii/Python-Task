    "#letter count assignment\n",
    "\n",
    "sentence = input(\"Enter a sentence: \")\n",
    "\n",
    "sentence_dict = {}\n",
    "\n",
    "for i in sentence:\n",
    "    keys = sentence_dict.keys()\n",
    "    if i in keys:\n",
    "        sentence_dict[i] += 1\n",
    "    else:\n",
    "        sentence_dict[i]= 1\n",
    "print(sentence_dict)"
   ]
